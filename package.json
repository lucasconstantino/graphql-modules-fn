{
  "name": "graphql-modules-fn",
  "version": "0.1.0-alpha7",
  "private": false,
  "description": "GraphQL modules with a functional influence.",
  "license": "MIT",
  "author": "Sebastian Ferrari <sebas5384@gmail.com>",
  "keywords": [
    "graphql",
    "apollo",
    "schema",
    "graphql-modules",
    "graphql-domain"
  ],
  "main": "lib/index.js",
  "files": [
    "/lib"
  ],
  "scripts": {
    "compile": "rm -rf ./lib && babel src -d lib --ignore src/**/*.test.js",
    "lint": "eslint src",
    "precommit": "lint-staged",
    "prepush": "yarn qa",
    "prepublish": "yarn qa && yarn compile",
    "qa": "yarn test && yarn lint",
    "release": "standard-version",
    "test": "jest src"
  },
  "lint-staged": {
    "*.js": [
      "prettier-eslint --write",
      "git add"
    ],
    "package.json": [
      "sort-package-json",
      "git add"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "devDependencies": {
    "@apollographql/apollo-tools": "^0.3.5",
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.3",
    "@babel/preset-env": "^7.3.1",
    "eslint": "^5.14.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "graphql": "^14.2.1",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.4",
    "prettier-eslint-cli": "^4.7.1",
    "sort-package-json": "^1.19.0",
    "standard-version": "^5.0.0"
  },
  "peerDependencies": {
    "@apollographql/apollo-tools": "^0.3.5"
  }
}
